<div class="row"></div>
<div class="container">
	<div class="col s6 offset-s3">
		<div class="collection">
		<% @ads.each do |ad| %>
		    <a href="dashboard/<%= ad.id %>" class="collection-item">
		    	Ad
		    	<span class="badge">R$ <%= ad.budget %></span>
		    </a>
		<% end %>
		</div>
		<%= paginate @ads %>
	</div>
	<div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
    <a class="btn-floating btn-large red waves-effect waves-light" href="/dashboard/new">
      <i class="large material-icons">add</i>
    </a>
  </div>
</div>