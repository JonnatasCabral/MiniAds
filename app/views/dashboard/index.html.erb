<div class="row"></div>
<div class="container">
	<div class="col s6 offset-s3">
	<% if @ads.count > 0 %>
		
	<div class="card">
		<div class="card-content">
			<div class="collection">
			<% @ads.each do |ad| %>
			    <a href="dashboard/<%= ad.id %>" class="collection-item">
			    	Ad
			    	<span class="badge"> R<%= ad.budget_mask %></span>
			    </a>
			<% end %>
			</div>
			<div class="fixed-action">
				<%= paginate @ads %>
			</div>
		</div>
	</div>
	<% else %>
		<h5 class="truncate center-align">Nenhum Ad Criado at√© o momento.</h5>
	<% end %>

	</div>
	<div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
    <a class="btn-floating btn-large red waves-effect waves-light" href="/dashboard/new">
      <i class="large material-icons">add</i>
    </a>
  </div>
</div>